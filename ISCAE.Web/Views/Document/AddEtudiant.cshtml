@model List<ISCAE.Data.Module>
@{
    ViewBag.Title = "Ajouter Document";
    Layout = "~/Views/Shared/_EtudiantLayout.cshtml";

}

<div class="row">
    <!-- left column -->
    <div class="col-md-8">
        <!-- general form elements -->
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Ajouter un nouveau</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("AddDocument", "Document", FormMethod.Post, new { enctype = "multipart/form-data" ,@id = "add-document" }))
            {
                <div class="box-body">

                    <div class="form-group">
                        <label for="document">Document</label>
                        <input type="file" id="document" name="document">
                        <p class="help-block"></p>
                    </div>
                    <div class="form-group">
                        <label for="">Module</label>
                        <select class="form-control" id="modules" name="module">
                            @{
                                foreach (ISCAE.Data.Module m in Model)
                                {
                                    <option value="@m.ModuleId">@m.Designation</option>
                                }
                            }
                        </select>
                    </div>

                </div>
                <!-- /.box-body -->
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                                }
        </div>
        <!-- /.box -->
    </div>
</div>