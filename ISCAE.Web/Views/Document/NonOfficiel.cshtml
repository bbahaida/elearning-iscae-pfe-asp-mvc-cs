@model List<DocumentNonOfficiel>
@using ISCAE.Data
@{
    ViewBag.Title = "Document > Non Officiel";


    if(Session["user"] is Etudiant)
    {
        Layout = "~/Views/Shared/_EtudiantLayout.cshtml";
        @Html.Partial("NonOfficielEtudiant", Model);
    }
    else if (Session["user"] is Professeur)
    {
        Layout = "~/Views/Shared/_ProfesseurLayout.cshtml";
        @Html.Partial("NonOfficielProfesseur", Model);
    }
}

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#form-pagination").submit(function () { return false;});
            $("#previous").click(function () {
                calculePage("previous");
                //$("form").submit();
            });
            $("#next").click(function () {
                calculePage("next");
                //$("form").submit();
            });
        });
        function calculePage(type) {
            var pageIndex = parseInt($("#pageIndex").val());
            if (type == "previous") {
                pageIndex--;
            }
            else if(type == "next"){
                pageIndex++;
            }
            else {
                alert("Error in pagination");
                return;
            }
            $("#pageIndex").val(pageIndex);
        }
        

    </script>
    }