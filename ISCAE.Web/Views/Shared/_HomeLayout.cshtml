<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ISCAE | @ViewBag.Title</title>
    @Styles.Render("~/Content/home")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="container-fluid">
        <div class="row">
            <span class="offset-sm-10 col-sm-2 login"><a id="login">Login</a><span><b>|</b></span><a id="register">Register</a></span>
        </div>
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded mb-4">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href='@Url.Action("Index", "Home")' class="navbar-brand"><img src="~/Content/img/logo.png" alt="Logo"/></a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Formations", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Professeurs", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Etudiants", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Avis", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <div class="container-fluid">
        <div class="row">
            <hr />
            <footer class="col-sm-12 footer-basic-centered">

                <p class="footer-links">
                    <a href="#">A Propos</a>
                    ·
                    <a href='@Url.Action("Directeur","Home")'>Mot du directeur</a>
                    ·
                    <a href="#">Partenaires</a>
                    ·
                    <a href="#">Notre offre</a>
                    ·
                    <a href="#">Contact</a>
                </p>
                <p class="footer-company-name">ISCAE Mauritanie &copy; @DateTime.Now.Year</p>
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
            </footer>
        </div>
    </div>
</body>
</html>
